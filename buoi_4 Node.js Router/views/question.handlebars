<script>
    $(document).ready(function () {
        var btnr = document.getElementById('btn-right');
        var btnw = document.getElementById('btn-wrong');
        var question = null;
        $("#otherQuestion").click(function () {
            $.ajax({
                url: '/',
                method: "post",
                data: {
                    name: "ahihihihi"
                },
                success: function (response) {
                    $("#question").html("" + response.question.questionContent);
                    question = response.question;
                    $("#btn-wrong").attr("href", "/question/no/" + response.question._id)
                    $("#btn-right").attr("href", "/question/yes/" + response.question._id)
                }
            })
        })


    });
</script>