<h1 style="text-align : center" id="question">{{question}}</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <button class="btn btn-primary" >
                <a style="color : white;text-decoration:none"  id="btn-wrong" href="/question/yes/{{id}}">
                    Sai/Không/Trái
                </a>
            </button>
        </div>

        <div class="col-md-3">
            <button class="btn btn-danger ml-3">
                <a style="color : white;text-decoration:none" id="btn-right" href="/question/no/{{id}}">
                    Đúng/Có/Phải
                </a>

            </button>
        </div>


    </div>
    <div class="row text-center mt-5" style="justify-content:center;">
        <button class="btn btn-outline-secondary" style="margin-right : 10px" onclick="location.href = '/question/info/{{id}}'">
            Kết quả vote
        </button>
        <button class="btn btn-outline-secondary" id="otherQuestion">
            Xem câu hỏi khác
        </button>
    </div>

</div>
